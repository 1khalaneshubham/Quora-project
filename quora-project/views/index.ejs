<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quora Clone - All Posts</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body>
    <div class="container">
        <header class="header">
            <h1><i class="fas fa-comments"></i> Quora Community</h1>
            <p>Share knowledge, ask questions, and connect with experts</p>
        </header>

        <div class="posts-grid">
            <% posts.forEach(post => { %>
                <div class="post">
                    <h3 class="user">
                        <i class="fas fa-user-circle"></i> <%= post.username %>
                    </h3>
                    <div class="contant">
                        <%= post.contant %>
                    </div>
                    
                    <div class="post-actions">
                        <a href="/posts/<%= post.id %>" class="action-btn view-btn">
                            <i class="fas fa-eye"></i> View Post
                        </a>
                        <a href="/posts/<%= post.id %>/edit" class="action-btn edit-btn">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form method="post" action="/posts/<%= post.id %>?_method=DELETE" class="delete-form">
                            <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this post?')">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="create-new">
            <a href="/posts/new" class="create-btn">
                <i class="fas fa-plus-circle"></i> Create New Post
            </a>
        </div>
    </div>

    <script>
        // Add smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Add post hover effects
        const posts = document.querySelectorAll('.post');
        posts.forEach(post => {
            post.addEventListener('mouseenter', () => {
                post.style.transform = 'translateY(-10px)';
            });
            post.addEventListener('mouseleave', () => {
                post.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>
</html>